<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/containerScroll"
        android:layout_height="wrap_content"
        tools:context="com.example.heba.testproject.RegActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/studentIdReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your ID"
                android:layout_marginBottom="16dp"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/studentPassReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Password"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/studentPassRegConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Your Password"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/studentEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email (Optional)"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress"
                />



        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerScroll"
        android:hint="Enter the 14 numbers of ID without S !\nand the Password matched the Confirm to active the Submit button !\nPassword length can't be less than 8 characters !"
        />
    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/clicked_btn"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        />

</RelativeLayout>