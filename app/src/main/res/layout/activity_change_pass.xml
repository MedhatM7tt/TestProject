
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/containerScroll"
        android:layout_height="wrap_content"
        tools:context="com.example.heba.testproject.StudentRegActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/studentPassChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your New Password"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/studentPassChangeConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Your New Password"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="the Password matched the Confirm to active the Submit button !\nPassword length can't be less than 8 characters !"
                />
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/ChangeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/clicked_btn"
                android:text="Submit"
                android:enabled="false"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>